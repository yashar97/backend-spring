<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.clientes_backend.mapper.ClienteRepository">

    <select id="findAll" resultType="com.clientes_backend.model.Cliente">
        SELECT id, nombre, apellido, email
        FROM cliente
    </select>

    <select id="findById" resultType="com.clientes_backend.model.Cliente">
        SELECT id, nombre, apellido, email
        FROM cliente
        WHERE id = #{idCliente}
    </select>

</mapper>